# Unite DeFi Agents Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# AI provider to use (openai, anthropic, or other)
AI_PROVIDER=openai

# AI model to use
AI_MODEL=gpt-4o-mini

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Organization ID (optional)
# OPENAI_ORG_ID=your_openai_org_id

# =============================================================================
# ANTHROPIC CONFIGURATION (Alternative to OpenAI)
# =============================================================================

# Anthropic API Key
# Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# BACKEND COMMUNICATION
# =============================================================================

# Backend URL for agent communication
BACKEND_URL=http://localhost:3001

# Frontend URL
FRONTEND_URL=http://localhost:3000

# =============================================================================
# AGENT SERVER CONFIGURATION
# =============================================================================

# Agent server port
AGENT_PORT=8000

# Host for the agent server
AGENT_HOST=localhost

# Environment (development, staging, production)
AGENT_ENV=development

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Enable detailed logging
ENABLE_DEBUG_LOGS=true

# =============================================================================
# AI BEHAVIOR CONFIGURATION
# =============================================================================

# Max tokens for AI responses
MAX_TOKENS=2000

# Temperature for AI responses (0.0 to 1.0)
AI_TEMPERATURE=0.7

# =============================================================================
# WORKFLOW GENERATION SETTINGS
# =============================================================================

# Maximum nodes per generated workflow
MAX_WORKFLOW_NODES=20

# Timeout for workflow generation (seconds)
WORKFLOW_GENERATION_TIMEOUT=30

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Requests per minute per IP
RATE_LIMIT_RPM=60

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379

# Database URL for persistence (optional)
# DATABASE_URL=postgresql://user:pass@localhost:5432/agents_db
