# Unite DeFi Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (CRITICAL FOR PRODUCTION)
# =============================================================================

# 1inch API Key - REQUIRED for real DeFi operations
# Get your API key from https://portal.1inch.dev/
ONEINCH_API_KEY=your_1inch_api_key_here

# =============================================================================
# BLOCKCHAIN RPC URLS
# =============================================================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Layer 2 Networks
ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_PROJECT_ID
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_PROJECT_ID
BASE_RPC_URL=https://mainnet.base.org/

# Alternative L1 Networks
AVALANCHE_RPC_URL=https://avalanche-mainnet.infura.io/v3/YOUR_PROJECT_ID
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
FANTOM_RPC_URL=https://rpc.ftm.tools/
CRONOS_RPC_URL=https://evm.cronos.org/

# Testnets
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_PROJECT_ID

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port
PORT=3001

# Environment (development, staging, production)
NODE_ENV=development

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# CORS & FRONTEND CONFIGURATION
# =============================================================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (if required)
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# AVALANCHE SPECIFIC CONFIGURATION
# =============================================================================

# Avalanche Fuji Testnet RPC
AVALANCHE_FUJI_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc

# Teleporter Contract Address (can be overridden if needed)
# TELEPORTER_CONTRACT_ADDRESS=0x253b2784c75e510dD0fF1da844684a1aC0aa5fcf

# =============================================================================
# CONTRACT ADDRESSES (Optional overrides)
# =============================================================================

# 1inch Router Contract Address
# ONEINCH_ROUTER_ADDRESS=0x1111111254fb6c44bAC0beD2854e76F90643097d

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Maximum number of concurrent workflow executions
MAX_CONCURRENT_WORKFLOWS=50

# Node execution timeout in milliseconds
NODE_TIMEOUT_MS=60000

# Maximum retries for failed operations
MAX_RETRIES=3

# Gas limit multiplier for safety
GAS_LIMIT_MULTIPLIER=1.2
