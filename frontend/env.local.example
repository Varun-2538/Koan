# Unite DeFi Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# BACKEND & SERVICES URLS
# =============================================================================

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Agent API URL
NEXT_PUBLIC_AGENT_URL=http://localhost:8000

# =============================================================================
# GITHUB OAUTH (For Code Deployment Features)
# =============================================================================

# GitHub OAuth App credentials
# Create an OAuth app at https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# =============================================================================
# SUPABASE (Optional - for data storage & analytics)
# =============================================================================

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase anonymous key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# API KEYS FOR FRONTEND OPERATIONS
# =============================================================================

# 1inch API Key (for frontend proxy operations)
NEXT_PUBLIC_ONEINCH_API_KEY=your_1inch_api_key_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Default chain ID for connections
NEXT_PUBLIC_DEFAULT_CHAIN_ID=1

# Supported chain IDs (comma-separated)
NEXT_PUBLIC_SUPPORTED_CHAINS=1,137,42161,10,8453,43114

# =============================================================================
# WALLET CONNECT (Optional)
# =============================================================================

# WalletConnect Project ID
# Get from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Mixpanel Token
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# Enable debug mode
NEXT_PUBLIC_DEBUG=true

# Feature flags
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API rate limits
NEXT_PUBLIC_API_RATE_LIMIT=100

# Session timeout (in minutes)
NEXT_PUBLIC_SESSION_TIMEOUT=60
